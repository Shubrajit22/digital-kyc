generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum KycStatus {
  PENDING
  APPROVED
  REUPLOAD_REQUIRED
}

model KycApplication {
  id            String     @id @default(cuid())
  fullName      String
  email         String
  phone         String
  pan           String
  aadhaar       String
  status        KycStatus  @default(PENDING)
  documentFiles Json?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

